<Page x:ConnectionId='1'
    x:Class="App4.Thread"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App4"
    xmlns:Custom="using:App4.sources"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer x:ConnectionId='2' x:Name="rootScrollViewer">
        <StackPanel x:ConnectionId='3' x:Name="ContentStackPanel" 
                    HorizontalAlignment="Left">
            <ListView x:ConnectionId='4' x:Name="threadListView">
                    <Grid  Margin="0,2,0,2" 
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="#D0D0D0D0"
                           MinHeight="100">
                        <StackPanel>
                            <StackPanel  Orientation="Horizontal">
                                <TextBlock x:ConnectionId='20'  Foreground="#FFCC1105"
                                            Margin="0,0,5,0"
                                                                             />
                                <TextBlock x:ConnectionId='21'  Foreground="#FF117743"
                                            Margin="5,0,5,0"
                                                                            />
                                <TextBlock x:ConnectionId='22'  Foreground="#FF005599"
                                            Margin="5,0,5,0"
                                                                                />
                            </StackPanel>
                            <TextBlock x:ConnectionId='17'                                  />
                            <StackPanel  Orientation="Horizontal">
                                <Image x:ConnectionId='18'                                      
                                        MaxHeight="250"
                                        MaxWidth="250"
                                        HorizontalAlignment="Left"
                                                             />
                                <WebView x:ConnectionId='19'                                                           
                                          MinHeight="400"
                                          MinWidth="600"
                                          DefaultBackgroundColor="Transparent"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
            </ListView>
            <ListView x:ConnectionId='5' x:Name="contentListView">
                <ListView.ItemTemplate>
                    <DataTemplate x:Name="thread"
                                                                >
                        <Grid x:ConnectionId='7' x:Name="grid" 
                              Margin="0,2,0,2" 
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Background="#D0D0D0D0"
                              MinHeight="100">
                            <StackPanel x:Name="rootStackPanel">
                                <StackPanel x:Name="infoStackpanel"
                                            Orientation="Horizontal">
                                    <TextBlock x:ConnectionId='14' x:Name="titleTextBlock"
                                               Foreground="#FFCC1105"
                                               Margin="0,0,5,0"
                                                                    />
                                    <TextBlock x:ConnectionId='15' x:Name="nameTextBlock"
                                               Foreground="#FF117743"
                                               Margin="5,0,5,0"
                                                                   />
                                    <TextBlock x:ConnectionId='16' x:Name="noTextBlock"
                                               Foreground="#FF005599"
                                               Margin="5,0,5,0"
                                                                       />
                                </StackPanel>
                                <TextBlock x:ConnectionId='10' x:Name="infoTextBlock"
                                                               />
                                <StackPanel x:Name="contentStackPanel"
                                            Orientation="Horizontal">
                                    <Image x:ConnectionId='12' x:Name="image"
                                                                   
                                           MaxHeight="250"
                                           MaxWidth="250"
                                           HorizontalAlignment="Left"
                                                                />
                                    <WebView x:ConnectionId='13' x:Name="ThreadWebview"
                                                                                          
                                             MinHeight="400"
                                             MinWidth="600"
                                             DefaultBackgroundColor="Transparent"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>

